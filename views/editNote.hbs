<main>
    <section>
        <header>
            <h1>{{title}}</h1>
        </header>
        <article>
            <form action='/editNote/{{note._id}}/' method='post' class="note">
                <input name='id' type='hidden' value={{note._id}}>

                <label for="noteTitel">Titel</label>
                <input type="text" name='noteTitle' id="noteTitel" autofocus required value={{note.noteTitle}}>

                <label for="description">Beschreibung</label>
                <textarea class="noteTextarea" name='description' id="description">{{note.description}}</textarea>

                <label for="priority">Priorit√§t</label>
                <input type="number" name='priority' min="1" max="5" id="priority" value={{note.priority}} required>

                <label for="dueDate">Erledigt bis</label>
                <input type="date" name="dueDate" id="dueDate" value={{note.dueDate}} required>

                <div class="checkbox">
                    <label for="state"><input type="checkbox" name="state" id="state" value="done" {{#if note.state}}
                                              checked {{/if}}>Erledigt!</label>
                </div>

                <div class="buttons">
                    <button name="save" type='submit' class="button" value='Speichern'>Speichern</button>
                    <a href="/" class="button">Abbrechen</a>
                </div>
            </form>
        </article>
    </section>
</main>
